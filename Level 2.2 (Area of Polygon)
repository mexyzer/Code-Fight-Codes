//Your task is to find the area of a polygon for a given n.

int shapeArea(int n) {
    
    //SET area = 1;
    int area = 1;
    
    //LOOP through till less than n
    for(int x = 0; x < n; x++)
        
        //SUM area + 4 times each iteration
        area += (4 * x);
    
    //RETURN area
    return area;
}

